<div class="container">
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag(post.image_url(:thumb).to_s) %></td>
        <td><%= post.attachment %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to post, post %><br>
          Submitted <%= time_ago_in_words(post.created_at) %> 
          by <%= post.user.email %>
        </td>
      
        <td><%= link_to like_post_path(post), method: :put do %>
          Upvote
          <%= post.get_upvotes.size %>
        <% end %>

        <%= link_to dislike_post_path(post), method: :put do %>
          Downvote
          <%= post.get_downvotes.size %>
          </td>
        </tr>
<% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
</div>





